{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      { "name": "next" }
    ],
    "baseUrl": ".",                       // ⬅️ importante para que funcionen los paths
    "paths": {
      "@/*": ["src/*"],                   // ya lo tenías, le quité el ./ (funciona igual)
      "@/components/*": ["components/*"], // ⬅️ components está en la raíz del repo
      "@/data/*": ["data/*"],             // ⬅️ data en la raíz del repo
      "@/lib/*": ["src/lib/*"]            // ⬅️ helpers/funciones compartidas
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
